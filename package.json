{
  "repository": {
    "type": "git",
    "url": "https://github.com/pinax/pinax-project"
  },
  "scripts": {
    "clean": "rm -rf static/dist && rm -rf static/_build && mkdir -p static/_build/js && mkdir -p static/_build/css && mkdir -p static/dist/js && mkdir -p static/dist/css && mkdir -p static/dist/fonts && mkdir -p static/dist/images",
    "compile:js": "./node_modules/.bin/browserify -t [ babelify --presets [ es2015 stage-1 ] ] -t envify static/src/js/site.js -o static/_build/js/site.js",
    "include:js": "HASH=`md5 -q static/_build/js/site.js` && cat static/src/hbs/_scripts.hbs | ./node_modules/.bin/handlebars --assetPath /site_media/static/js/site-$HASH.js > zero/templates/_scripts.html",
    "dist:js": "HASH=`md5 -q static/_build/js/site.js` && cp static/_build/js/site.js static/dist/js/site-$HASH.js",
    "build:js": "npm run compile:js && npm run include:js && npm run dist:js",
    "compile:css": "./node_modules/.bin/lessc --include-path=node_modules/font-awesome/less:node_modules/bootstrap/less static/src/less/site.less > static/_build/css/site.css",
    "include:css": "HASH=`md5 -q static/_build/css/site.css` && cat static/src/hbs/_styles.hbs | ./node_modules/.bin/handlebars --assetPath /site_media/static/css/site-$HASH.css > zero/templates/_styles.html",
    "dist:css": "HASH=`md5 -q static/_build/css/site.css` && cp static/_build/css/site.css static/dist/css/site-$HASH.css",
    "build:css": "npm run compile:css && npm run include:css && npm run dist:css",
    "copy:fonts": "cp node_modules/bootstrap/fonts/* static/dist/fonts/ && cp node_modules/font-awesome/fonts/* static/dist/fonts/",
    "copy:images": "cp -r static/src/images/* static/dist/images/ 2>/dev/null || :",
    "optimize:js": "HASH=`md5 -q static/_build/js/site.js` && ./node_modules/.bin/uglifyjs static/dist/js/site-$HASH.js -m -c warnings=false -o static/dist/js/site-$HASH.js",
    "optimize:css": "HASH=`md5 -q static/_build/css/site.css` && ./node_modules/.bin/cssnano static/dist/css/site-$HASH.css static/dist/css/site-$HASH.css",
    "optimize": "npm run optimize:js && npm run optimize:css",
    "build": "npm run clean && npm run build:js && npm run build:css && npm run copy:fonts && npm run copy:images && npm run optimize",
    "watch:test": "onchange static/src/js/**/*.js -- npm run test",
    "watch:lint": "onchange static/src/js/**/*.js -- npm run lint",
    "watch:js": "onchange static/src/js/**/*.js -- npm run build:js",
    "watch:css": "onchange static/src/less/**/*.less -- npm run build:css",
    "watch": "./node_modules/.bin/concurrently --raw \"npm run watch:lint\" \"npm run watch:lint\" \"npm run watch:js\" \"npm run watch:css\"",
    "lint": "./node_modules/.bin/eslint static/src/**/**/*.js",
    "test": "./node_modules/.bin/mocha --recursive --compilers js:babel-register static/src/tests/index.js"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "cssnano": "^3.7.7",
    "cssnano-cli": "^1.0.5",
    "envify": "^3.4.1",
    "eslint": "^3.8.1",
    "eslint-plugin-babel": "^3.3.0",
    "handlebars-cmd": "^0.1.4",
    "jsdom": "^9.8.0",
    "jsdom-global": "^2.1.0",
    "less": "^2.7.1",
    "mocha": "^3.1.2",
    "onchange": "^3.0.2",
    "uglifyjs": "^2.4.10"
  }
}
